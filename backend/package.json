{
  "name": "apollo-backend",
  "version": "1.0.0",
  "description": "Apostrophe backend for the ApostropheCMS + Astro Apollo template",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "start": "node app",
    "dev": "APOS_EXTERNAL_FRONT_KEY=dev nodemon",
    "build": "NODE_ENV=production node app @apostrophecms/asset:build",
    "serve": "NODE_ENV=production node app",
    "release": "pnpm install && pnpm build && pnpm migrate",
    "migrate": "NODE_ENV=production node app @apostrophecms/migration:migrate",
    "load-starter-content": "./scripts/load-starter-content",
    "update-starter-content": "./scripts/update-starter-content"
  },
  "engines": {
    "node": "^18.17.1 || ^20.3.0 || >=22.0.0",
    "npm": ">=9.0.0"
  },
  "nodemonConfig": {
    "delay": 1000,
    "verbose": true,
    "watch": [
      "./app.js",
      "./modules/**/*",
      "./lib/**/*.js",
      "./views/**/*.html"
    ],
    "ignoreRoot": [
      ".git"
    ],
    "ignore": [
      "**/ui/apos/",
      "**/ui/src/",
      "**ui/public/",
      "locales/*.json",
      "public/uploads/",
      "public/apos-frontend/*.js",
      "data/"
    ],
    "ext": "json, js, html, scss, vue"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/apostrophecms/apollo"
  },
  "author": "Apostrophe Technologies, Inc.",
  "license": "MIT",
  "dependencies": {
    "@apostrophecms-pro/advanced-permission": "github:apostrophecms/advanced-permission",
    "@apostrophecms-pro/doc-template-library": "github:apostrophecms/doc-template-library",
    "@apostrophecms-pro/document-versions": "github:apostrophecms/document-versions",
    "@apostrophecms/mongodb-snapshot": "github:apostrophecms/apostrophe#main&path:packages/mongodb-snapshot",
    "@apostrophecms/seo": "github:apostrophecms/apostrophe#main&path:packages/seo",
    "@apostrophecms/vite": "github:apostrophecms/apostrophe#main&path:packages/vite",
    "apostrophe": "github:apostrophecms/apostrophe#main&path:packages/apostrophe",
    "normalize.css": "^8.0.1"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "eslint-config-apostrophe": "github:apostrophecms/apostrophe#main&path:packages/eslint-config-apostrophe",
    "nodemon": "^3.0.1"
  },
  "packageManager": "pnpm@10.18.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "cypress",
      "esbuild",
      "puppeteer",
      "sharp",
      "unrs-resolver",
      "vue-demi"
    ],
    "ignoredBuiltDependencies": [
      "protobufjs"
    ]
  }
}
